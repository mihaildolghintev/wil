<div class='flex flex-col w-full'>
  <h2 class='text-3xl mb-8'>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-2 mb-4">
      <%= f.label :email, class: 'text-sm' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border rounded py-1 px-2' %>
    </div>

    <div class="flex flex-col gap-2 mb-4">
      <%= f.label :password, class: 'text-sm' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'border rounded py-1 px-2' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center gap-2 mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'text-sm' %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.submit "Log in", class: 'border rounded bg-yellow-100 px-3 py-1 cursor-pointer' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
