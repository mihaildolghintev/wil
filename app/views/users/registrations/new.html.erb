<div class='flex flex-col w-full'>

  <h2 class='text-3xl mb-8'>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div>
      <%= render "users/shared/error_messages", resource: resource %>
    </div>

    <div class="flex flex-col gap-2 mb-4 w-full">
      <%= f.label :email, class: 'text-sm' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border rounded py-1 px-2 w-full' %>
    </div>

    <div class="flex flex-col gap-2 mb-4">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em class='text-xs'>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'border rounded py-1 px-2 w-full'%>
    </div>

    <div class="flex flex-col gap-2 mb-4">
      <%= f.label :password_confirmation, class: 'text-sm' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'border rounded py-1 px-2'%>
    </div>

    <div class="mb-4">
      <%= f.submit "Sign up", class: 'border rounded bg-yellow-100 px-3 py-1 cursor-pointer' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
