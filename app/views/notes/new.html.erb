<h1 class='text-3xl'>What do you learn today?</h1>

<%= form_with model: @note do |form| %>
  <div class='flex flex-col gap-1'>
    <%= form.label :title %>
    <%= form.text_field :title, class: 'border border-gray-400 rounded py-3 px-3' %>
  </div>

  <div class='mb-4'>
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <div>
    <%= form.submit class: 'border rounded bg-yellow-100 px-5 py-3' %>
  </div>
<% end %>
